---
import SparklesCore from "../components/SparklesCore.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfólio de Thomas Eduardo - Desenvolvedor Full Stack com foco em React, Next.js e Node.js." />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon padrão -->
    <link rel="icon" type="image/png" href="/favicon-branca.png" />
    <link rel="icon" type="image/png" href="/public/favicon-preta.png" media="(prefers-color-scheme: dark)" />

    <!-- Open Graph -->
    <meta property="og:title" content="ODev Thomas - Desenvolvedor Full Stack" />
    <meta property="og:description" content="Portfólio de Thomas Eduardo - Desenvolvedor Full Stack com foco em soluções modernas com React, Next.js e Node.js." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://odevthomas.dev" />
    <meta property="og:image" content="https://odevthomas.dev/logo.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="600" />
    <meta property="og:site_name" content="ODev Thomas" />
    <meta property="og:locale" content="pt_BR" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@odevthomas" />
    <meta name="twitter:creator" content="@odevthomas" />
    <meta name="twitter:title" content="ODev Thomas - Desenvolvedor Full Stack" />
    <meta name="twitter:description" content="Portfólio de Thomas Eduardo - Desenvolvedor Full Stack com foco em React, Next.js e Node.js." />
    <meta name="twitter:image" content="https://odevthomas.dev/logo.png" />

    <meta name="generator" content="{Astro.generator}" />
    <title>{title}</title>
  </head>

  <body
    class="bg-black leading-relaxed text-neutral-200 tracking-wide antialiased selection:bg-neutral-300 selection:text-neutral-900 z-10 relative"
  >
    <SparklesCore
      client:idle
      id="tsparticlesfullpage"
      background="transparent"
      minSize={0.6}
      maxSize={1.4}
      opacity={0.2}
      particleDensity={100}
      className="w-full h-full fixed z-0"
      particleColor="#FFFFFF"
    />
    <slot />
    <script src="../scripts/main.ts"></script>
  </body>

  <style is:global>
    html {
      font-family: system-ui, sans-serif;
      background-size: 224px;
      font-size: 1.125rem;
    }
  </style>
</html>
