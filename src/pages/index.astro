---
import Component from "../components/Component.astro";
import Experience from "../components/experience/index.astro";
import { EXPERIENCE } from "../data/experience";
import { SOCIALS } from "../data/socials";
import Layout from "../layouts/Layout.astro";

import Skill from "../components/skills/index.astro";
import { SKILLS } from "../data/skills";
---

<Layout title=" Thomas Eduardo">
  <div class="relative hero z-10">
    <div class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0 animate-fadeIn">
      <div class="lg:flex lg:justify-between lg:gap-4">
        <header class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24 animate-slideInLeft">
          <div class="flex lg:items-start gap-4 flex-col lg:flex-row items-center text-center lg:text-left">
            <img src="/logo.png" alt="Thomas Eduardo R Nascimento" class="w-16 h-16 rounded-full shadow-lg hover:scale-105 transition-transform duration-300" />
            <div>
              <a href="/" class="text-4xl lg:text-5xl block font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-neutral-400 animate-gradient">
                <h1>Thomas Eduardo R Nascimento</h1>
              </a>
              <h2 class="mt-2 text-sm lg:text-lg font-medium text-neutral-400 animate-fadeIn delay-200">Desenvolvedor Web</h2>

              <a
                data-ccursor
                href="mailto:developer.thomas@outlook.com.br"
                class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-3 py-2.5 items-center text-white font-semibold group p-2 text-sm gap-x-2 mt-4 hover:bg-green-400/20"
              >
                <span>Envie um e-mail</span>
                <span class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-ping"></span>
              </a>
            </div>
          </div>

          {SOCIALS.length && (
            <ul class="mt-8 flex items-center justify-center lg:justify-normal gap-x-5 animate-fadeIn delay-500" aria-label="Redes sociais">
              {SOCIALS.map((social) => (
                <li class="text-xs p-2 rounded hover:bg-white/5 transition duration-300 transform hover:-translate-y-1" data-ccursor>
                  <a
                    class="block hover:text-slate-200 transition duration-200"
                    href={social.url}
                    target="_blank"
                    rel="noreferrer noopener"
                    aria-label={`${social.name} (abre em uma nova aba)`}
                  >
                    <span class="sr-only">{social.name}</span>
                    {<Component component={social.icon} />}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </header>

        <main id="content" class="pt-24 lg:w-1/2 lg:py-24 animate-slideInRight">
          <!-- SOBRE -->
          <section id="about" class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24" aria-label="Sobre mim">
            <div class="mb-5 space-y-8 text-neutral-300">
              <p class="transition-opacity duration-1000 delay-200 animate-fadeIn">
                Desenvolvedor Frontend com experiência em criação de interfaces modernas, acessíveis e responsivas. Atuei em projetos que envolvem arquitetura de componentes, integração com APIs, sistemas completos e deploy em nuvem. Tenho domínio de ferramentas como React, TypeScript, Node.js, Tailwind CSS, MongoDB e Docker.
              </p>
              <p class="transition-opacity duration-1000 delay-300 animate-fadeIn">
                Valorizo a qualidade do código, a performance da aplicação e a experiência do usuário. Também possuo conhecimentos em práticas DevOps, versionamento, deploy automatizado e segurança básica para web.
              </p>
            </div>
          </section>

          <!-- EXPERIÊNCIA -->
          <section id="experience" class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24" aria-label="Experiência de trabalho">
            <h2 class="text-lg font-bold uppercase tracking-widest text-white mb-6">Experiência</h2>
            <div>
              <ol class="group/list space-y-12">
                {EXPERIENCE.map((experience) => <Experience {...experience} />)}
              </ol>
            </div>
          </section>

     

          <!-- HABILIDADES -->
          <section id="skills" class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24" aria-label="Habilidades">
            <h2 class="text-lg font-bold uppercase tracking-widest text-white mb-6">Habilidades</h2>
            <ul class="group/list space-y-4">
              {SKILLS.map((skill) => <Skill skill={skill} />)}
            </ul>
          </section>

          <!-- RODAPÉ FINAL -->
          <footer class="max-w-md pb-16 text-sm text-neutral-500 sm:pb-0 flex items-center justify-between">
            <img src="/favicon-preta.png" alt="Logo" class="h-8 w-auto mr-4 animate-fadeIn" />
            <p class="flex items-center space-x-2">
              <span>São Paulo |</span>
              <a href="https://www.figma.com/" class="font-medium text-neutral-400 hover:text-red-300 focus-visible:text-red-300 hover:underline" target="_blank" rel="noreferrer">Brasil</a>
              <span>| @odevthomas |</span>
            </p>
          </footer>
        </main>
      </div>
    </div>
  </div>

  <footer class="text-center py-4 text-xs text-neutral-600 animate-fadeIn">
    {new Date().getFullYear()} Todos os direitos reservados.
  </footer>
</Layout>

<style scoped>
@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(15px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes gradientFlow {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 100% 50%;
  }
}

.animate-fadeIn {
  animation: fadeIn 1s ease forwards;
}

.animate-slideInLeft {
  animation: slideInLeft 1s ease-out forwards;
}

.animate-slideInRight {
  animation: slideInRight 1s ease-out forwards;
}

.animate-gradient {
  background-size: 200% 200%;
  animation: gradientFlow 5s ease infinite;
}

.hero {
  background-image: url(/pattern.svg);
  background-position: top center;
  background-repeat: no-repeat;
  overflow-y: visible;
  overflow-x: clip;
}
</style>
